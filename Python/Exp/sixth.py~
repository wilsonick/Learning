import random


# -------------------------- CONTROL FLOW AND DATA TYPE BASICS COMBINED -----------------------

# number, string, list, tuple, set, dict, boolean, 

number1 = 3
string1 = 'hello'
list1 = [1,2,3,6]
tuple1 = (3234,8338)
tuple2 = (3234,8338)
set1 = {19384,7823,8492937,249382}
dict1 = {'hi' : 1, 'bye' : 0}
boolean1 = True


print(list1*2)
list1.extend( list1 )
print(list1)


# if while for elif



# ----------------------- IF PLAYING-----------------------

if number1 == 1:
    print('hello')

if string1 is 'hi':
    print('different')


if 2 is not 1:
    print('happy')

    
if set1 == set1:
    print('hello')

if tuple1 == tuple2:
    print('same')
    
#if set1+set1 == set1:
#    print('sup')

if set1 == set1:
    print(dict1)

if False+False == True:
    print('hi')

if True+True == 2:
    print('hey')
    
if list1 != list1*2:
    print('help')




if True:
    if True:
        if True:
            if True:
                print('1')
            print('2')
        print('3')
    print('4')
print('5')



    
if True:
    while False:
        if boolean1:
            print('1')
        print('2')
    print('3')






# ---------------------- FOR CODING --------------------------

# These lines do the same thing, but are different. 

test1 = 2
while test1 != 5:
    print(test1)
    test1 = test1 + 1

for test2 in range(2,5):
    print(test2)







# --------------- WHILE CODING --------------------
    
'''
while True:
    pass
'''

while [1,2] == 1:
    pass

    
while string1 is not 'he':
    string1 = 'he'
    print(string1)

while True:
    break

while 1 == 0:
    pass





# Randomly generate strings from a random number:

randomalpha = 'abcdefghijklmnopqrstuvwxyz'

print( randomalpha[ random.randint(0,len(randomalpha) - 1) ] +
       randomalpha[ random.randint(0,len(randomalpha) - 1) ] +
       randomalpha[ random.randint(0,len(randomalpha) - 1) ])

